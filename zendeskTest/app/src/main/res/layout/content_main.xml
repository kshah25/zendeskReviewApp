<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kandarp.zendesktest.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/ticketReviewBodyTxt"
        android:maxLines="10"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review goes here"
        android:textAlignment="center"/>

    <TextView
        android:layout_below="@id/ticketReviewBodyTxt"
        android:layout_marginTop="30dp"
        android:id="@+id/ticketReviewAuthorTxt"
        android:maxLines="10"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reviewer name"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticketReviewAuthorTxt"
        android:gravity="right|center_vertical">
            <TextView
                android:id="@+id/ticketReviewAgentTxt"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agent Name"
                />
            <ImageView
                android:id="@+id/ticketReviewAgenPhototTxt"
                android:layout_toRightOf="@id/ticketReviewAgentTxt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                />
    </LinearLayout>
</RelativeLayout>
